@page "/Countries"

<PageHeader Title="Countries" />

<MudTable Items="@_countries"
    Bordered="true"
    Hover="true"
    Striped="true"
    Loading="_isLoading">
    <HeaderContent>
        <MudTh>ID</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>Code</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@context.Id</MudTd>
        <MudTd>@context.Name</MudTd>
        <MudTd>@context.Code</MudTd>
    </RowTemplate>
</MudTable>
