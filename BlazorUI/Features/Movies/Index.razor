@page "/Movies"

@inject IJSRuntime JsRuntime

<PageHeader Title="Books" />

<MudStack Row="true"
          Justify="Justify.FlexEnd"
          Class="mb-4">
    <MudButton Variant="Variant.Filled"
               Color="Color.Primary"
               Href="Movies/Create">
        Add New Book
    </MudButton>
    <MudButton Variant="Variant.Filled"
               Color="Color.Secondary"
               OnClick="DownloadPdf">
        Export Data PDF Books
    </MudButton>
    <MudButton Variant="Variant.Filled"
               Color="Color.Success"
               OnClick="DownloadExcel">
        Export Data Excel Books
    </MudButton>
</MudStack>

@if (_isLoading)
{
    <MudProgressLinear Striped="true"
                       Color="Color.Primary"
                       Indeterminate="true" />
}

@if (!string.IsNullOrWhiteSpace(_errorMessage))
{
    <MudAlert Severity="Severity.Error">
        @_errorMessage
    </MudAlert>
}

<MudTable Items="@_movies"
          Bordered="true"
          Hover="true"
          Striped="true">
    <HeaderContent>
        <MudTh>
            Title
        </MudTh>
        <MudTh>
            Rating
        </MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>
            <MudLink Href="@($"Movies/Details/{context.Id}")">
                @context.Title
            </MudLink>
        </MudTd>
        <MudTd>
            @context.Rating
        </MudTd>
    </RowTemplate>
</MudTable>
